<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  
  <!-- Main Dialog Container -->
  <Style Selector="Border.installDialog">
    <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}"/>
    <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="CornerRadius" Value="16"/>
    <Setter Property="Padding" Value="32"/>
    <Setter Property="BoxShadow" Value="0 16 64 0 #40000000"/>
    <Setter Property="Transitions">
      <Transitions>
        <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.3"/>
        <DoubleTransition Property="Opacity" Duration="0:0:0.3"/>
      </Transitions>
    </Setter>
  </Style>

  <!-- File Selection Container -->
  <Style Selector="Border.fileListContainer">
    <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
    <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="CornerRadius" Value="12"/>
    <Setter Property="Padding" Value="16"/>
    <Setter Property="Margin" Value="0,8,0,0"/>
  </Style>

  <!-- Timeout Warning Container -->
  <Style Selector="Border.timeoutWarning">
    <Setter Property="Background" Value="#1FFF6B47"/>
    <Setter Property="BorderBrush" Value="#FF6B47"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="CornerRadius" Value="8"/>
    <Setter Property="Padding" Value="12,8"/>
    <Setter Property="Margin" Value="0,0,0,8"/>
    <Setter Property="Transitions">
      <Transitions>
        <DoubleTransition Property="Opacity" Duration="0:0:0.5"/>
      </Transitions>
    </Setter>
  </Style>

  <!-- Timeout Warning Animation -->
  <Style Selector="Border.timeoutWarning">
    <Style.Animations>
      <Animation Duration="0:0:1" IterationCount="INFINITE">
        <KeyFrame Cue="0%">
          <Setter Property="Opacity" Value="0.8"/>
        </KeyFrame>
        <KeyFrame Cue="50%">
          <Setter Property="Opacity" Value="1.0"/>
        </KeyFrame>
        <KeyFrame Cue="100%">
          <Setter Property="Opacity" Value="0.8"/>
        </KeyFrame>
      </Animation>
    </Style.Animations>
  </Style>

  <!-- File Item Button - Invisible button wrapper -->
  <Style Selector="Button.fileItemButton">
    <Setter Property="Background" Value="Transparent"/>
    <Setter Property="BorderThickness" Value="0"/>
    <Setter Property="Padding" Value="0"/>
    <Setter Property="Margin" Value="0"/>
    <Setter Property="CornerRadius" Value="0"/>
    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
    <Setter Property="VerticalContentAlignment" Value="Stretch"/>
  </Style>

  <Style Selector="Button.fileItemButton:pointerover">
    <Setter Property="Background" Value="Transparent"/>
  </Style>

  <Style Selector="Button.fileItemButton:pressed">
    <Setter Property="Background" Value="Transparent"/>
  </Style>

  <!-- File Item Container -->
  <Style Selector="Border.fileItem">
    <Setter Property="Background" Value="Transparent"/>
    <Setter Property="CornerRadius" Value="8"/>
    <Setter Property="Padding" Value="12,10"/>
    <Setter Property="Margin" Value="0,3"/>
    <Setter Property="Cursor" Value="Hand"/>
    <Setter Property="Transitions">
      <Transitions>
        <BrushTransition Property="Background" Duration="0:0:0.2"/>
      </Transitions>
    </Setter>
  </Style>

  <Style Selector="Button.fileItemButton:pointerover Border.fileItem">
    <Setter Property="Background" Value="{StaticResource HoverBrush}"/>
  </Style>

  <!-- Select All CheckBox -->
  <Style Selector="CheckBox.selectAllCheckBox">
    <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
    <Setter Property="FontSize" Value="15"/>
    <Setter Property="FontWeight" Value="Medium"/>
    <Setter Property="Padding" Value="8,6"/>
    <Setter Property="Margin" Value="0"/>
    <Setter Property="Background" Value="Transparent"/>
    <Setter Property="BorderThickness" Value="0"/>
    <Setter Property="CornerRadius" Value="6"/>
    <Setter Property="MinHeight" Value="32"/>
    <Setter Property="VerticalAlignment" Value="Center"/>
    <Setter Property="HorizontalAlignment" Value="Left"/>
    <Setter Property="Transitions">
      <Transitions>
        <BrushTransition Property="Background" Duration="0:0:0.15"/>
        <BrushTransition Property="Foreground" Duration="0:0:0.15"/>
      </Transitions>
    </Setter>
  </Style>

  <Style Selector="CheckBox.selectAllCheckBox:pointerover">
    <Setter Property="Background" Value="{StaticResource HoverBrush}"/>
  </Style>

  <Style Selector="CheckBox.selectAllCheckBox:checked">
    <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
  </Style>

  <!-- Select All CheckBox mark -->
  <Style Selector="CheckBox.selectAllCheckBox /template/ Border#NormalRectangle">
    <Setter Property="Width" Value="18"/>
    <Setter Property="Height" Value="18"/>
    <Setter Property="CornerRadius" Value="4"/>
    <Setter Property="BorderThickness" Value="2"/>
    <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
    <Setter Property="Background" Value="Transparent"/>
  </Style>

  <Style Selector="CheckBox.selectAllCheckBox:checked /template/ Border#NormalRectangle">
    <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
    <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
  </Style>

  <Style Selector="CheckBox.selectAllCheckBox:pointerover /template/ Border#NormalRectangle">
    <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
  </Style>

  <Style Selector="CheckBox.selectAllCheckBox /template/ Path#CheckGlyph">
    <Setter Property="Stroke" Value="White"/>
    <Setter Property="StrokeThickness" Value="2"/>
  </Style>

  <!-- Individual file checkboxes -->
  <Style Selector="Border.fileItem CheckBox">
    <Setter Property="MinWidth" Value="0"/>
    <Setter Property="MinHeight" Value="0"/>
    <Setter Property="Padding" Value="0"/>
    <Setter Property="Background" Value="Transparent"/>
    <Setter Property="BorderThickness" Value="0"/>
  </Style>

  <Style Selector="Border.fileItem CheckBox /template/ Border#NormalRectangle">
    <Setter Property="Width" Value="16"/>
    <Setter Property="Height" Value="16"/>
    <Setter Property="CornerRadius" Value="3"/>
    <Setter Property="BorderThickness" Value="2"/>
    <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
    <Setter Property="Background" Value="Transparent"/>
  </Style>

  <Style Selector="Border.fileItem CheckBox:checked /template/ Border#NormalRectangle">
    <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
    <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
  </Style>

  <Style Selector="Border.fileItem CheckBox:pointerover /template/ Border#NormalRectangle">
    <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
  </Style>

  <Style Selector="Border.fileItem CheckBox /template/ Path#CheckGlyph">
    <Setter Property="Stroke" Value="White"/>
    <Setter Property="StrokeThickness" Value="1.5"/>
  </Style>

  <!-- Install Button -->
  <Style Selector="Button.installButton">
    <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
    <Setter Property="Foreground" Value="White"/>
    <Setter Property="BorderThickness" Value="0"/>
    <Setter Property="CornerRadius" Value="12"/>
    <Setter Property="FontWeight" Value="SemiBold"/>
    <Setter Property="FontSize" Value="16"/>
    <Setter Property="MinHeight" Value="44"/>
    <Setter Property="HorizontalContentAlignment" Value="Center"/>
    <Setter Property="VerticalContentAlignment" Value="Center"/>
    <Setter Property="Cursor" Value="Hand"/>
    <Setter Property="Transitions">
      <Transitions>
        <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.2"/>
        <DoubleTransition Property="Opacity" Duration="0:0:0.2"/>
      </Transitions>
    </Setter>
  </Style>

  <Style Selector="Button.installButton:pointerover">
    <Setter Property="Opacity" Value="0.9"/>
    <Setter Property="RenderTransform" Value="translateY(-1px)"/>
  </Style>

  <!-- Cancel Button -->
  <Style Selector="Button.cancelButton">
    <Setter Property="Background" Value="{StaticResource SecondaryBrush}"/>
    <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
    <Setter Property="BorderThickness" Value="0"/>
    <Setter Property="CornerRadius" Value="12"/>
    <Setter Property="FontWeight" Value="SemiBold"/>
    <Setter Property="FontSize" Value="16"/>
    <Setter Property="MinHeight" Value="44"/>
    <Setter Property="HorizontalContentAlignment" Value="Center"/>
    <Setter Property="VerticalContentAlignment" Value="Center"/>
    <Setter Property="Cursor" Value="Hand"/>
    <Setter Property="Transitions">
      <Transitions>
        <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.2"/>
        <DoubleTransition Property="Opacity" Duration="0:0:0.2"/>
      </Transitions>
    </Setter>
  </Style>

  <Style Selector="Button.cancelButton:pointerover">
    <Setter Property="Opacity" Value="0.9"/>
    <Setter Property="RenderTransform" Value="translateY(-1px)"/>
  </Style>

</Styles>