<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Plugin Settings Dialog Overlay -->
    <Style Selector="Grid.pluginSettingsOverlay">
        <Setter Property="Background" Value="#80000000"/>
    </Style>

    <!-- Plugin Settings Dialog Container -->
    <Style Selector="Border.pluginSettingsDialog">
        <Setter Property="Background" Value="{DynamicResource CardBackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="MinWidth" Value="520"/>
        <Setter Property="MaxWidth" Value="820"/>
        <Setter Property="MinHeight" Value="400"/>
        <Setter Property="MaxHeight" Value="700"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="CornerRadius" Value="12"/>
    </Style>

    <!-- Plugin Settings Header -->
    <Style Selector="Border.pluginSettingsHeader">
        <Setter Property="Background" Value="{DynamicResource AccentBrush}"/>
        <Setter Property="CornerRadius" Value="12,12,0,0"/>
        <Setter Property="Padding" Value="20,15"/>
        <Setter Property="MinHeight" Value="60"/>
    </Style>

    <!-- Plugin Settings Header Icon -->
    <Style Selector="TextBlock.pluginSettingsHeaderIcon">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,0,15,0"/>
    </Style>

    <!-- Plugin Settings Header Title -->
    <Style Selector="TextBlock.pluginSettingsTitle">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
        <Setter Property="MaxLines" Value="1"/>
    </Style>

    <!-- Plugin Settings Header Subtitle -->
    <Style Selector="TextBlock.pluginSettingsSubtitle">
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="Foreground" Value="#E0FFFFFF"/>
        <Setter Property="Margin" Value="0,2,0,0"/>
        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
        <Setter Property="MaxLines" Value="1"/>
    </Style>

    <!-- Plugin Settings Close Button -->
    <Style Selector="Button.pluginSettingsCloseButton">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Width" Value="30"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="CornerRadius" Value="15"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>

    <!-- Plugin Settings Content -->
    <Style Selector="ScrollViewer.pluginSettingsContent">
        <Setter Property="Padding" Value="20,20,30,20"/>
        <Setter Property="MinHeight" Value="200"/>
    </Style>

    <!-- Plugin Settings Content Stack -->
    <Style Selector="StackPanel.pluginSettingsContentStack">
        <Setter Property="Spacing" Value="15"/>
        <Setter Property="Margin" Value="0,0,0,120"/>
    </Style>

    <!-- Plugin Description -->
    <Style Selector="TextBlock.pluginDescription">
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="LineHeight" Value="18"/>
        <Setter Property="Margin" Value="0,0,0,10"/>
    </Style>

    <!-- Loading Indicator Container -->
    <Style Selector="Border.pluginSettingsLoadingContainer">
        <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="30"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>

    <!-- Loading Indicator Text -->
    <Style Selector="TextBlock.pluginSettingsLoadingText">
        <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- Configuration Item Container -->
    <Style Selector="Border.pluginConfigurationItem">
        <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="Padding" Value="15"/>
        <Setter Property="Margin" Value="0,0,0,15"/>
        <Setter Property="MinHeight" Value="80"/>
    </Style>

    <!-- Configuration Item Title -->
    <Style Selector="TextBlock.configurationItemTitle">
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="LineHeight" Value="16"/>
    </Style>

    <!-- Configuration Item Description -->
    <Style Selector="TextBlock.configurationItemDescription">
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="Foreground" Value="{DynamicResource DisabledTextBrush}"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="LineHeight" Value="16"/>
        <Setter Property="Margin" Value="0,2,0,0"/>
        <Setter Property="MaxWidth" Value="450"/>
    </Style>

    <!-- Configuration Item Input Grid -->
    <Style Selector="Grid.configurationItemInput">
        <Setter Property="MinHeight" Value="32"/>
    </Style>

    <!-- Configuration Item Text Input -->
    <Style Selector="TextBox.configurationItemTextInput">
        <Setter Property="TextWrapping" Value="NoWrap"/>
        <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto"/>
    </Style>

    <!-- Configuration Item TextArea Input -->
    <Style Selector="TextBox.configurationItemTextAreaInput">
        <Setter Property="AcceptsReturn" Value="True"/>
        <Setter Property="MinHeight" Value="80"/>
        <Setter Property="MaxHeight" Value="150"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
    </Style>

    <!-- Configuration Item Number Input -->
    <Style Selector="NumericUpDown.configurationItemNumberInput">
        <Setter Property="ShowButtonSpinner" Value="True"/>
        <Setter Property="MinWidth" Value="120"/>
    </Style>

    <!-- Configuration Item Boolean Input -->
    <Style Selector="ToggleSwitch.configurationItemBooleanInput">
        <Setter Property="HorizontalAlignment" Value="Left"/>
    </Style>

    <!-- Configuration Item Enum Input -->
    <Style Selector="ComboBox.configurationItemEnumInput">
        <Setter Property="MinWidth" Value="150"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
    </Style>

    <!-- Configuration Item Multi-Select Enum Input Container -->
    <Style Selector="Border.configurationItemMultiSelectEnumInput">
        <Setter Property="MinWidth" Value="200"/>
        <Setter Property="MaxWidth" Value="400"/>
    </Style>

    <!-- Multi-Select Enum Input StackPanel -->
    <Style Selector="Border.configurationItemMultiSelectEnumInput StackPanel">
        <Setter Property="Spacing" Value="8"/>
    </Style>

    <!-- Multi-Select Enum Input Label -->
    <Style Selector="Border.configurationItemMultiSelectEnumInput TextBlock">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
    </Style>

    <!-- Multi-Select Enum Dropdown Button -->
    <Style Selector="ToggleButton.configurationItemMultiSelectDropdown">
        <Setter Property="Background" Value="{DynamicResource CardBackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="MinHeight" Value="36"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="Template">
            <ControlTemplate>
                <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="{TemplateBinding CornerRadius}"
                        Padding="{TemplateBinding Padding}">
                    <Grid ColumnDefinitions="*,Auto">
                        <ContentPresenter Grid.Column="0"
                                          Content="{TemplateBinding Content}"
                                          ContentTemplate="{TemplateBinding ContentTemplate}"
                                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="1"
                                   Text="▼"
                                   FontSize="10"
                                   Foreground="{DynamicResource DisabledTextBrush}"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Right"
                                   IsVisible="{Binding !$parent[ToggleButton].IsChecked}"/>
                        <TextBlock Grid.Column="1"
                                   Text="▲"
                                   FontSize="10"
                                   Foreground="{DynamicResource DisabledTextBrush}"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Right"
                                   IsVisible="{Binding $parent[ToggleButton].IsChecked}"/>
                    </Grid>
                </Border>
            </ControlTemplate>
        </Setter>
    </Style>

    <Style Selector="ToggleButton.configurationItemMultiSelectDropdown:pointerover">
        <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
    </Style>

    <Style Selector="ToggleButton.configurationItemMultiSelectDropdown:checked">
        <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
    </Style>

    <!-- Multi-Select Enum Dropdown Panel -->
    <Style Selector="Border.configurationItemMultiSelectDropdownPanel">
        <Setter Property="Background" Value="{DynamicResource CardBackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="Margin" Value="0,4,0,0"/>
        <Setter Property="BoxShadow" Value="0 4 12 0 #20000000"/>
    </Style>

    <!-- Multi-Select Enum Dropdown CheckBox -->
    <Style Selector="CheckBox.multiSelectDropdownCheckBox">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
        <Setter Property="Padding" Value="8,6"/>
        <Setter Property="MinHeight" Value="32"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>

    <!-- Multi-Select Enum Dropdown CheckBox Hover -->
    <Style Selector="CheckBox.multiSelectDropdownCheckBox:pointerover">
        <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
    </Style>

    <!-- Multi-Select Enum Dropdown CheckBox Checked -->
    <Style Selector="CheckBox.multiSelectDropdownCheckBox:checked">
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <!-- Configuration Item Choice Input -->
    <Style Selector="ComboBox.configurationItemChoiceInput">
        <Setter Property="MinWidth" Value="150"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
    </Style>

    <!-- Configuration Item Key -->
    <Style Selector="TextBlock.configurationItemKey">
        <Setter Property="FontSize" Value="9"/>
        <Setter Property="Foreground" Value="{DynamicResource DisabledTextBrush}"/>
        <Setter Property="Margin" Value="0,6,0,0"/>
        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
    </Style>

    <!-- No Settings Message Container -->
    <Style Selector="Border.pluginNoSettingsContainer">
        <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="30"/>
        <Setter Property="MinHeight" Value="120"/>
    </Style>

    <!-- No Settings Message Icon -->
    <Style Selector="TextBlock.pluginNoSettingsIcon">
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Foreground" Value="{DynamicResource DisabledTextBrush}"/>
    </Style>

    <!-- No Settings Message Title -->
    <Style Selector="TextBlock.pluginNoSettingsTitle">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
    </Style>

    <!-- No Settings Message Text -->
    <Style Selector="TextBlock.pluginNoSettingsText">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Foreground" Value="{DynamicResource DisabledTextBrush}"/>
        <Setter Property="TextAlignment" Value="Center"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="MaxWidth" Value="300"/>
    </Style>

    <!-- Plugin Settings Footer -->
    <Style Selector="Border.pluginSettingsFooter">
        <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="0,1,0,0"/>
        <Setter Property="CornerRadius" Value="0,0,12,12"/>
        <Setter Property="Padding" Value="20,15"/>
        <Setter Property="MinHeight" Value="60"/>
    </Style>

    <!-- Plugin Settings Reset Button -->
    <Style Selector="Button.pluginSettingsResetButton">
        <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Padding" Value="10,6"/>
        <Setter Property="MinWidth" Value="80"/>
    </Style>

    <!-- Unsaved Changes Indicator -->
    <Style Selector="StackPanel.pluginSettingsUnsavedIndicator">
        <Setter Property="Orientation" Value="Horizontal"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- Unsaved Changes Dot -->
    <Style Selector="Ellipse.pluginSettingsUnsavedDot">
        <Setter Property="Width" Value="8"/>
        <Setter Property="Height" Value="8"/>
        <Setter Property="Fill" Value="#FF9800"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,0,6,0"/>
    </Style>

    <!-- Unsaved Changes Text -->
    <Style Selector="TextBlock.pluginSettingsUnsavedText">
        <Setter Property="Foreground" Value="#FF9800"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- Plugin Settings Cancel Button -->
    <Style Selector="Button.pluginSettingsCancelButton">
        <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Padding" Value="12,6"/>
        <Setter Property="Margin" Value="0,0,8,0"/>
        <Setter Property="MinWidth" Value="70"/>
    </Style>

    <!-- Plugin Settings Save Button -->
    <Style Selector="Button.pluginSettingsSaveButton">
        <Setter Property="Background" Value="{DynamicResource AccentBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Padding" Value="12,6"/>
        <Setter Property="MinWidth" Value="120"/>
    </Style>

</Styles>