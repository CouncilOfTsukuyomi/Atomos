<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:Atomos.UI.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Atomos.UI.Views.SentryPromptView"
             x:DataType="viewModels:SentryPromptViewModel">

    <!-- Use the semi-transparent overlay brush -->
    <Grid IsVisible="{Binding IsVisible}"
          Background="#80000000">

        <ExperimentalAcrylicBorder
            Material="{StaticResource ContentAcrylicMaterial}"
            Padding="20"
            MaxWidth="500"
            MaxHeight="300"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            CornerRadius="10">

            <StackPanel Spacing="15">
                <!-- Title -->
                <TextBlock
                    Text="Enable Sentry"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="{StaticResource TextBrush}"
                    HorizontalAlignment="Center" />

                <!-- Sentry information -->
                <StackPanel Spacing="5">
                    <TextBlock
                        Text="• Sentry helps track crashes and errors to improve your experience."
                        FontSize="14"
                        Foreground="{StaticResource TextBrush}"
                        TextWrapping="Wrap" />
                    <TextBlock
                        Text="• No personal data is collected."
                        FontSize="14"
                        Foreground="{StaticResource TextBrush}"
                        TextWrapping="Wrap" />
                    <TextBlock
                        Text="• You can change this preference at any time on the Settings page."
                        FontSize="14"
                        Foreground="{StaticResource TextBrush}"
                        TextWrapping="Wrap" />
                </StackPanel>

                <!-- Button panel -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Spacing="10">

                    <Button
                        Content="No"
                        Command="{Binding DeclineCommand}"
                        Width="100"
                        Background="{StaticResource SecondaryBrush}"
                        Foreground="{StaticResource TextBrush}"
                        Classes="ButtonStyle" />

                    <Button
                        Content="Yes"
                        Command="{Binding AcceptCommand}"
                        Width="100"
                        Background="{StaticResource AccentBrush}"
                        Foreground="{StaticResource TextBrush}"
                        Classes="ButtonStyle" />
                </StackPanel>
            </StackPanel>
        </ExperimentalAcrylicBorder>
    </Grid>
</UserControl>