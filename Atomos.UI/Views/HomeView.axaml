<UserControl
    x:Class="Atomos.UI.Views.HomeView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:asyncImageLoader="clr-namespace:AsyncImageLoader;assembly=AsyncImageLoader.Avalonia"
    xmlns:gif="clr-namespace:Avalonia.Labs.Gif;assembly=Avalonia.Labs.Gif"
    xmlns:models1="clr-namespace:CommonLib.Models;assembly=CommonLib"
    xmlns:i="clr-namespace:Avalonia.Xaml.Interactivity;assembly=Avalonia.Xaml.Interactivity"
    xmlns:viewModels="clr-namespace:Atomos.UI.ViewModels"
    x:DataType="viewModels:HomeViewModel"
    mc:Ignorable="d"
    d:DesignWidth="800"
    d:DesignHeight="450">
<Grid ColumnDefinitions="Auto,*,Auto" Margin="5" DragDrop.AllowDrop="True">
    <!-- Left column (statistics, etc.) -->
    <ScrollViewer Grid.Column="0" Margin="5">
        <ItemsControl Classes="infoBoxes" ItemsSource="{Binding InfoItems}"/>
    </ScrollViewer>

    <!-- Middle column is empty -->

    <!-- Right column: Recent Mods -->
    <ScrollViewer Grid.Column="2" Margin="5">
        <StackPanel>
            <gif:GifImage
                Source="avares://Atomos.UI/Animations/LoadingAnimation.gif"
                Width="64"
                Height="64"
                IsVisible="{Binding IsLoading}" />

            <ItemsControl ItemsSource="{Binding RecentMods}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate x:DataType="models1:XmaMods">
                        <Border Margin="5" Padding="10" CornerRadius="4" Background="{StaticResource BackgroundBrush}">
                            <StackPanel Spacing="8">
                                <StackPanel Orientation="Horizontal" Spacing="10">
                                    <asyncImageLoader:AdvancedImage
                                        Source="{Binding ImageUrl}"
                                        Width="120"
                                        Height="120"
                                        Stretch="UniformToFill"/>
                                    <StackPanel>
                                        <TextBlock
                                            Text="{Binding Name}"
                                            Foreground="{StaticResource TextBrush}"
                                            FontWeight="Bold"
                                            FontSize="14"/>
                                        <TextBlock
                                            Text="{Binding Publisher}"
                                            Foreground="{StaticResource PrimaryBrush}"
                                            FontStyle="Italic"/>
                                        <TextBlock Foreground="{StaticResource AccentBrush}">
                                            <TextBlock.Text>
                                                <MultiBinding StringFormat="Type: {0}">
                                                    <Binding Path="Type"/>
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                        <TextBlock Foreground="{StaticResource AccentBrush}">
                                            <TextBlock.Text>
                                                <MultiBinding StringFormat="Gender: {0}">
                                                    <Binding Path="Gender"/>
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                    </StackPanel>
                                </StackPanel>

                                <!-- Row with View and Download buttons -->
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="5">
                                    <Button
                                        Content="View Webpage"
                                        Tag="{Binding}"
                                        Click="OnViewModClicked"
                                        Background="{StaticResource SecondaryBrush}"
                                        Foreground="{StaticResource TextBrush}" />
                                    <Button
                                        Content="Download"
                                        Tag="{Binding}"
                                        Click="OnDownloadModClicked"
                                        Background="{StaticResource AccentBrush}"
                                        Foreground="{StaticResource TextBrush}" />
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </ScrollViewer>
</Grid>
</UserControl>