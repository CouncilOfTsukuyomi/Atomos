<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:models1="clr-namespace:PenumbraModForwarder.Common.Models;assembly=PenumbraModForwarder.Common">
    <Style Selector="ItemsControl.modsList">        
        <Setter Property="ItemsPanel">
            <ItemsPanelTemplate>
                <StackPanel/>
            </ItemsPanelTemplate>
        </Setter>
        
        <Setter Property="ItemTemplate">
            <DataTemplate x:DataType="models1:ModInstallationRecord">
                <Border BorderBrush="{StaticResource SecondaryBrush}"
                        BorderThickness="0,0,0,1"
                        Padding="12,8">
                    <StackPanel>
                        <TextBlock Text="{Binding ModName}"
                                   Foreground="{DynamicResource TextBrush}"
                                   FontSize="16"
                                   FontWeight="Bold"/>
                        <TextBlock Text="{Binding InstallationTime}"
                                   Foreground="{DynamicResource TextBrush}"
                                   FontSize="13"
                                   Opacity="0.8"
                                   Margin="0,2,0,0"/>
                    </StackPanel>
                </Border>
            </DataTemplate>
        </Setter>
    </Style>
</Styles>